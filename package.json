{
  "name": "@fjedi/database-client",
  "version": "4.0.1",
  "description": "Wrapper around sequelize ORM with some fancy helpers for caching and full-data-tree sql-joins",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "private": false,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "clean": "rimraf lib",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fjedi/database-client.git"
  },
  "keywords": [
    "fjedi"
  ],
  "author": "Alexander Radyushin <r.alex.andr@ya.ru> (https://fjedi.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fjedi/database-client/issues"
  },
  "homepage": "https://github.com/fjedi/database-client#readme",
  "dependencies": {
    "@fjedi/errors": "1.1.3",
    "@fjedi/logger": "1.46.1",
    "@fjedi/redis-client": "1.0.2",
    "@types/bluebird": "3.5.34",
    "@types/graphql-list-fields": "2.0.3",
    "@types/json-buffer": "3.0.0",
    "@types/lodash": "4.14.168",
    "@types/shimmer": "1.0.1",
    "@types/umzug": "2.3.0",
    "bluebird": "3.7.2",
    "dataloader-sequelize": "2.3.1",
    "graphql-list-fields": "2.0.2",
    "json-buffer": "3.0.1",
    "lodash": "4.17.21",
    "sequelize": "6.6.2",
    "sequelize-cli": "6.2.0",
    "shimmer": "1.2.1",
    "umzug": "2.3.0"
  },
  "devDependencies": {
    "@types/expect": "24.3.0",
    "@types/jest": "26.0.23",
    "@types/node": "14.14.44",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "7.26.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "11.0.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
